<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operaciones con BD!"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:backgroundTint="@color/teal_200"
        android:layout_marginTop="15dp"
        android:onClick="onClickBtn"/>
    <Button
        android:id="@+id/btnModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:backgroundTint="@color/teal_200"
        android:onClick="onClickBtn"/>
    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:backgroundTint="@color/teal_200"
        android:onClick="onClickBtn"/>
    <Button
        android:id="@+id/btnMostrar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar 1"
        android:backgroundTint="@color/teal_200"
        android:onClick="onClickBtn"/>
    <Button
        android:id="@+id/btnMostrarVarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar todos"
        android:backgroundTint="@color/teal_200"
        android:onClick="onClickBtn"/>
    <Button
        android:id="@+id/btnMostrarLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar todos en una lista"
        android:backgroundTint="@color/teal_200"
        android:onClick="onClickBtn"/>

</LinearLayout>